<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro" />

    <!-- Farben -->

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>

    <material name="yellow">
        <color rgba="1 1 0 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>

    <material name="green">
        <color rgba="0.0 1.0 0.0 1.0" />
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>
    <!-- CHASSIS LINK -->
    <joint name="cassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis" />
        <origin xyz="-0.25 0.0 0.0" />
    </joint>


    <link name="chassis">
        <visual>
            <origin xyz="0.25 0.0 0.03" />
            <geometry>
                <box size="0.5 0.13 0.06" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <origin xyz="0.25 0.0 0.03" />
            <geometry>
                <box size="0.5 0.13 0.06" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.3" x="0.5" y="0.13" z="0.06">
            <origion xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/Black</material>
    </gazebo>

    <joint name="cassis_top_joint" type="fixed">
        <parent link="chassis" />
        <child link="chassis_top" />
        <origin xyz="0.0 0.0 0.0" />
    </joint>

    <link name="chassis_top">
        <visual>
            <origin xyz="0.25 0 0.06" />
            <geometry>
                <box size="0.5 0.22 0.02" />
            </geometry>
            <material name="black" />
        </visual>
        <collision>
            <origin xyz="0.25 0 0.06" />
            <geometry>
                <box size="0.5 0.22 0.02" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.1" x="0.5" y="0.22" z="0.02">
            <origion xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis_top">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- LEFT WHEEL LINK  Section-->

    <joint name="left_wheel_joint" type="continuous">
        <origin xyz="0.0 0.085 0.0" rpy="-${pi/2} 0.0 0.0" />
        <parent link="base_link" />
        <child link="left_wheel" />
        <axis xyz="0.0 0.0 1.0" />
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0" />
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.035" length="0.028" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.035" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.028" radius="0.035">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/Blue</material>
        <mu1 value="100000000000000.0" /><!-- 0.001-->
        <mu2 value="100000000000000.0" />
        <kp value="1000000000000.0" />
        <kd value="10"/>
        <minDepth>0.001</minDepth>
        <maxVel>0.1</maxVel>
        <fdir1>1 0 0</fdir1>
    </gazebo>

    <joint name="left_wheel_joint_f" type="fixed">
        <origin xyz="0.15 0.085 0.0" rpy="-${pi/2} 0.0 0.0" />
